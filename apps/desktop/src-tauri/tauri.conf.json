{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ExamParse Desktop",
  "version": "0.1.0",
  "identifier": "com.examparse.desktop",
  "app": {
    "windows": [
      { 
        "title": "ExamParse Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ]
  },
  "build": {
    "beforeDevCommand": "npm run dev --prefix ./ui",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build --prefix ./ui",
    "frontendDist": "./ui/dist"
  },
  "bundle": {
    "active": true,
    "targets": [
      {
        "target": "nsis",
        "arch": ["x86_64"]
      },
      {
        "target": "msi", 
        "arch": ["x86_64"]
      },
      {
        "target": "deb",
        "arch": ["x86_64"]
      },
      {
        "target": "appimage",
        "arch": ["x86_64"]
      },
      {
        "target": "dmg",
        "arch": ["x86_64", "aarch64"]
      }
    ],
    "identifier": "com.examparse.desktop",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../sidecar-dist/*"
    ],
    "externalBin": [
      "sidecar-dist/examparse-sidecar"
    ],
    "copyright": "Copyright (C) 2025 ExamParse Team",
    "category": "Productivity",
    "shortDescription": "AI-powered exam question parsing tool",
    "longDescription": "ExamParse Desktop converts PDF/Word exam files into structured Excel format using AI technology. Supports multiple question types including single choice, multiple choice, judgment, short answer, essay, and case analysis questions.",
    "license": "MIT",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["zh-CN", "en-US"]
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true
      }
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    }
  }
}


